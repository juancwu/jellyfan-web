package layout

templ RootLayout(title string) {
	<!DOCTYPE html>
	<html>
		<head>
			<meta charset="UTF-8"/>
			<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
			<link rel="stylesheet" href="/static/styles.css"/>
			if len(title) > 0 {
				<title>{ title }</title>
			} else {
				<title>Jellyfan | Web</title>
			}
		</head>
		<body class="w-full h-full bg-gray-50">
			{ children... }
		</body>
	</html>
}
